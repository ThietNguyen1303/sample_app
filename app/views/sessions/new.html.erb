<% provide :title , t("layouts._header.login_h") %>
<h1><% t "layouts._header.login_h" %></h1>
<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_path do |f| %>
      <%= f.label :email, t("users.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("users.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("users.new.submit_button"), class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t "session.new.new" %>
      <%= link_to t("static_pages.home.signup"), signup_path %>
    </p>
  </div>
</div>
